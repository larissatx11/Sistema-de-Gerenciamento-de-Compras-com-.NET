@model UsuarioModel
@{
    Layout = "_LayoutDeslogado";
    ViewData["Title"] = "Cadastro";
}

<body class="cadastro-page-background">
  <div class="row justify-content-center">
    <div class="card text-center" style="max-width: 400px;">
      <div class="card-body">
        <h1 class="display-4">Cadastro</h1>

        <form asp-controller="Cadastrar" asp-action="Criar" method="post">

          <div class="mb-2 text-start">
              <label for="nome" class="form-label">Nome</label>
              <input type="text" id="nome" asp-for="Nome" class="form-control input-width" placeholder="Digite o nome">
              @Html.ValidationMessageFor(x => x.Nome, "", new { @class = "text-danger" })
          </div>

          <div class="mb-2 text-start">
              <label for="email" class="form-label">E-mail</label>
              <input type="text" id="email" asp-for="Email" class="form-control input-width" placeholder="Digite o e-mail">
              @Html.ValidationMessageFor(x => x.Email, "", new { @class = "text-danger" })
          </div>

          <div class="mb-2 text-start">
              <label for="senha" class="form-label">Senha</label>
              <input type="password" id="senha" asp-for="Senha" class="form-control input-width" placeholder="Digite a senha">
              @Html.ValidationMessageFor(x => x.Senha, "", new { @class = "text-danger" })
          </div>

          <div class="d-flex justify-content-center">
              <button type="submit" class="btn btn-primary me-2 mt-3">Cadastrar</button>
              <a class="btn btn-secondary mt-3" asp-controller="Cadastrar" asp-action="Index" role="button">Voltar</a>
          </div>
        </form>
      </div>
    </div>
  </div>
</body>