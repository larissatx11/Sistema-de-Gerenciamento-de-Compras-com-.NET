@model LojaModel
@{
    ViewData["Title"] = "Adicionar Loja";
}

<div class="d-flex justify-content-center align-items-center">
  <div class="w-100" style="max-width: 500px;">
    <div class="text-center mb-4">
        <h1 class="display-4">Adicionar Loja</h1>
    </div>

    <form asp-controller="Loja" asp-action="Criar" method="post">
      <div class="mb-3 text-start">
        <label for="nome" class="custom-label">Nome</label>
        <div class="d-flex justify-content-center align-items-center flex-column">
          <input type="text" id="nome" asp-for="Nome" class="form-control w-75" placeholder="Digite o nome da loja">
        </div>
        <div class="custom-label">
          @Html.ValidationMessageFor(x => x.Nome)
        </div>
      </div>

      <div class="mb-3 text-start">
        <label for="endereco"class="custom-label">Endereço</label>
        <div class="d-flex justify-content-center align-items-center flex-column">
          <input type="text" id="endereco" asp-for="Endereco" class="form-control w-75" placeholder="Digite o endereço da loja">
        </div>
        <div class="custom-label">
          @Html.ValidationMessageFor(x => x.Endereco)
        </div>
      </div>

    <div class="d-flex justify-content-center">
      <button type="submit" class="btn btn-primary  btn-wide me-2">Adicionar</button>
      <a class="btn btn-secondary btn-wide " asp-controller="Loja" asp-action="Index" role="button">Voltar</a>
    </div>
    </form>
