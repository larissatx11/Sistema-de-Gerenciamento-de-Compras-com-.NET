@model UsuarioModel
@{
    ViewData["Title"] = "Editar Usuario";
}

<div class="d-flex justify-content-center align-items-center">
    <div class="w-100" style="max-width: 500px;">

    <div class="text-center mb-4">
        <h1 class="display-4">Editar Usuario</h1>
    </div>

    <form asp-controller="Usuario" asp-action="Editar" method="post">

      <input type="hidden" asp-for="Id"/>
<div class="mb-3 text-start">
        <label for="nome" class="custom-label">Nome</label>
        <div class="d-flex justify-content-center align-items-center flex-column">
          <input type="text" id="nome" asp-for="Nome" class="form-control w-75" placeholder="Digite o nome do usuário">
        </div>

        <div class="custom-label">
          @Html.ValidationMessageFor(x => x.Nome)
        </div>
      </div>

      <div class="mb-3 text-start">
        <label for="email" class="custom-label">E-mail</label>
         <div class="d-flex justify-content-center align-items-center flex-column">
            <input type="text" id="email" asp-for="Email" class="form-control w-75" placeholder="Digite o e-mail do usuário">
         </div>
        
        <div class="custom-label">
          @Html.ValidationMessageFor(x => x.Email)
        </div>
      </div>

      <div class="mb-3 text-start">
        <label for="senha" class="custom-label">Senha</label>
        <div class="d-flex justify-content-center align-items-center flex-column">
          <input type="password" id="senha" asp-for="Senha" class="form-control w-75" placeholder="Digite a senha do usuário">
        </div>
        
        <div class="custom-label">
          @Html.ValidationMessageFor(x => x.Senha)
        </div>
      </div>

      <div class="d-flex justify-content-center mt-2">
        <button type="submit" class="btn btn-primary btn-wide me-2">Editar</button>
        <a class="btn btn-secondary btn-wide" asp-controller="Usuario" asp-action="Index" role="button">Voltar</a>
      </div>
    </form>
  </div>
</div>