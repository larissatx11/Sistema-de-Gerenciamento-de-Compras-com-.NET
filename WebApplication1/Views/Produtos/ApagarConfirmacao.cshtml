@model ProdutosModel
@{
    ViewData["Title"] = "Confirmação apagar o produto";
}
<div class="text-center">
    <h3>Realmente deseja apagar o produto (@Model.Nome)?</h3>
</div>

<div class="d-grid gap-2 col-6 mx-auto">
    <a class="btn btn-danger" asp-action="Apagar" asp-controller="Produtos" asp-route-id="@Model.Id" role="button">Confirmar exclusão</a>
    <a class="btn btn-secondary" asp-action="Index" asp-controller="Produtos" role="button" >Cancelar exclusão</a>
</div>