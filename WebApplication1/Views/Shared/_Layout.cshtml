<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Controle de Compras </title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApplication1.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/5.3.0/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" />
</head>
<body>
    <div class="d-flex flex-column min-vh-100">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm custom-navbar border-bottom box-shadow mb-3">
            <div class="container">
                @await Component.InvokeAsync("Menu")
            </div>
        </nav>
        <div class="container flex-grow-1">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
        <footer class="border-top footer text-muted mt-auto">
            <div class="container d-flex justify-content-between align-items-center footer-text">
                &copy; 2024 - Controle de Compras
                <div class="d-flex align-items-center">
                    <a href="https://www.linkedin.com/in/larissa-teixeira-9261b924b/" class="text-muted me-3"><i class="fa-brands fa-linkedin fa-2xl" style="color: #936FCB;"></i></a>
                    <a href="https://github.com/larissatx11" class="text-muted me-3"><i class="fa-brands fa-github fa-2xl" style="color: #936FCB;"></i></a>
                    <a href="https://www.instagram.com/_larissatx_/" class="text-muted"><i class="fa-brands fa-instagram fa-2xl" style="color: #936FCB;"></i></a>
                </div>
            </div>
        </footer>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
